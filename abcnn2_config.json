{
    "data_paths": {
        "train": "data/quora/train.csv",
        "val": "data/quora/val.csv",
        "test": "data/quora/test.csv"
    },
    "embeddings": {
        "path": "embeddings/GoogleNews-vectors-negative300.bin.gz",
        "size": 300,
        "format": "word2vec",
        "is_binary": true
    },
    "optim": {
        "lr": 0.0055,
        "weight_decay": 0.005
    },
    "model": {
        "max_length": 20,
        "use_all_layer_outputs": true,
        "layers": [
            [
                {
                    "type": "abcnn2",
                    "input_size": 300,
                    "output_size": 50,
                    "width": 3,
                    "match_score": "manhattan",
                    "share_weights": true,
                    "dropout_rate": 0.5
                },
                {
                    "type": "abcnn2",
                    "input_size": 50,
                    "output_size": 50,
                    "width": 3,
                    "match_score": "manhattan",
                    "share_weights": true,
                    "dropout_rate": 0.5
                }
            ]
        ]
    },
    "train": {
        "batch_size": 256,
        "start_epoch": 1,
        "num_epochs": 5,
        "log_every": 1,
        "plot_every": 5,
        "num_workers": 16,
        "checkpoint_dir": "checkpoints/quora/word2vec/google_news/abcnn2",
        "gamma": 0.1,
        "verbose": true
    }
}
