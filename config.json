{
    "data_paths": {
        "train": "data/quora/train.csv",
        "val": "data/quora/val.csv",
        "test": "data/quora/test.csv"
    },
    "embeddings": {
        "path": "embeddings/GoogleNews-vectors-negative300.bin.gz",
        "size": 300,
        "format": "word2vec",
        "is_binary": true
    },
    "optim": {
        "lr": 0.0055,
        "weight_decay": 0.0005
    },
    "model": {
        "max_length": 15,
        "use_all_layers": true,
        "blocks": [
            {  
                "type": "abcnn3",
                "input_size": 300,
                "output_size": 50,
                "width": 3,
                "match_score": "euclidean",
                "share_weights": true,
                "dropout_rate": 0.5
            },
            {
                "type": "abcnn3",
                "input_size": 50,
                "output_size": 50,
                "width": 3,
                "match_score": "euclidean",
                "share_weights": true,
                "dropout_rate": 0.1
            }
        ]
    },
    "train": {
        "batch_size": 4096,
        "start_epoch": 1,
        "num_epochs": 10,
        "log_every": 1,
        "plot_every": 5,
        "num_workers": 4,
        "checkpoint_dir": "checkpoints/quora/word2vec/google_news/",
        "verbose": false
    }
}
