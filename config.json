{
    "data_paths": {
        "train": "data/quora/train.csv",
        "val": "data/quora/val.csv",
        "test": "data/quora/test.csv"
    },
    "embeddings": {
        "path": "embeddings/wiki.en.bin",
        "size": 300,
        "format": "fasttext",
        "is_binary": false
    },
    "optim": {
        "lr": 0.055,
        "weight_decay": 0.0005
    },
    "model": {
        "max_length": 15,
        "use_all_layers": true,
        "blocks": [
            {  
                "type": "abcnn3",
                "input_size": 300,
                "output_size": 50,
                "width": 3,
                "match_score": "manhattan",
                "share_weights": true,
                "dropout_rate": 0.5
            },
            {
                "type": "abcnn3",
                "input_size": 50,
                "output_size": 50,
                "width": 3,
                "match_score": "manhattan",
                "share_weights": true,
                "dropout_rate": 0.5
            }
        ]
    },
    "train": {
        "batch_size": 2048,
        "start_epoch": 1,
        "num_epochs": 10,
        "log_every": 1,
        "plot_every": 5,
        "num_workers": 16,
        "checkpoint_dir": "checkpoints/gpu1",
        "verbose": false
    }
}
